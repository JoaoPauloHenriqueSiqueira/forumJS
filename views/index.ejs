<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <a href="/questions/new" class="btn btn-primary">Nova Pergunta</a>
        <hr>
        <% questions.forEach(function(produto){%>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= produto.title %></h3>
                </div>
                <div class="card-footer">
                    <a href="/question/<%= produto.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div>
        <%})%>

    </div>
  

</body>
<%- include('partials/footer.ejs') %>